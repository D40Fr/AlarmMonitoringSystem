{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AlarmMonitoringSystem": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AlarmMonitoring.db"
  },
  "TcpServer": {
    "Port": 6060,
    "IpAddress": "0.0.0.0",
    "MaxConnections": 100,
    "BufferSize": 1024,
    "ConnectionTimeoutSeconds": 300,
    "HeartbeatIntervalSeconds": 30,
    "EnableHeartbeat": true,
    "MaxMessageSize": 10240,
    "LogRawMessages": true
  }
}