@model AlarmMonitoringSystem.Application.DTOs.AlarmDto
@{
    ViewData["Title"] = $"Alarm Details - {Model.Title}";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Alarms" asp-action="Index">Alarms</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2">@Model.Title</h1>
                    <p class="text-muted">Alarm ID: <code>@Model.AlarmId</code></p>
                </div>
                <div>
                    <span class="badge @Model.SeverityBadgeClass badge-lg">@Model.SeverityDisplay</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }

    <!-- Alarm Status Alert -->
    @if (Model.Severity == AlarmMonitoringSystem.Domain.Enums.AlarmSeverity.Critical && !Model.IsAcknowledged)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="fas fa-fire"></i> Critical Alarm!</h4>
            <p>This is a critical alarm that requires immediate attention. Please review and acknowledge once resolved.</p>
        </div>
    }
    else if (Model.Severity == AlarmMonitoringSystem.Domain.Enums.AlarmSeverity.High && !Model.IsAcknowledged)
    {
        <div class="alert alert-warning" role="alert">
            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> High Priority Alarm</h5>
            <p>This alarm requires prompt attention.</p>
        </div>
    }

    <!-- Main Alarm Information -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Alarm Details</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Title:</strong><br>
                            <h5>@Model.Title</h5>
                        </div>
                        <div class="col-md-6">
                            <strong>Alarm ID:</strong><br>
                            <code class="h6">@Model.AlarmId</code>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Message:</strong><br>
                                <div class="alert alert-light">
                                    @Model.Message
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Type:</strong><br>
                            <span class="badge badge-secondary">@Model.TypeDisplay</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Severity:</strong><br>
                            <span class="badge @Model.SeverityBadgeClass">@Model.SeverityDisplay</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Zone:</strong><br>
                            @if (!string.IsNullOrEmpty(Model.Zone))
                            {
                                <span class="badge badge-light">@Model.Zone</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>Value:</strong><br>
                            @if (Model.NumericValue.HasValue)
                            {
                                <strong class="text-primary">@Model.FormattedValue</strong>
                            }
                            else
                            {
                                <span class="text-muted">No value</span>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Alarm Time:</strong><br>
                            @Model.AlarmTime.ToString("dddd, MMMM dd, yyyy 'at' HH:mm:ss")
                            <br><small class="text-muted">@Model.TimeAgo</small>
                        </div>
                        <div class="col-md-6">
                            <strong>Received:</strong><br>
                            @Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm:ss")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Client Information -->
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Client Information</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-desktop fa-3x text-muted"></i>
                    </div>
                    <div class="text-center">
                        <h5>@Model.ClientName</h5>
                        <p class="text-muted">@Model.ClientIdentifier</p>
                        <a asp-controller="Clients" asp-action="Details" asp-route-id="@Model.ClientId"
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-external-link-alt"></i> View Client
                        </a>
                    </div>
                </div>
            </div>

            <!-- Acknowledgment Status -->
            <div class="card shadow mt-3">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Status</h6>
                </div>
                <div class="card-body text-center">
                    @if (Model.IsAcknowledged)
                    {
                        <i class="fas fa-check-circle fa-3x text-success mb-2"></i>
                        <h5 class="text-success">Acknowledged</h5>
                        @if (Model.AcknowledgedAt.HasValue)
                        {
                            <p class="text-muted">
                                @Model.AcknowledgedAt.Value.ToString("MMM dd, yyyy 'at' HH:mm")
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.AcknowledgedBy))
                        {
                            <p class="text-muted">by <strong>@Model.AcknowledgedBy</strong></p>
                        }
                    }
                    else if (Model.IsActive)
                    {
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-2"></i>
                        <h5 class="text-warning">Pending Acknowledgment</h5>
                        <p class="text-muted">This alarm requires acknowledgment</p>

                        <form asp-action="Acknowledge" asp-route-id="@Model.Id" method="post" class="mt-3">
                            <button type="submit" class="btn btn-success btn-block"
                                    onclick="return confirm('Acknowledge this alarm?')">
                                <i class="fas fa-check"></i> Acknowledge Alarm
                            </button>
                        </form>
                    }
                    else
                    {
                        <i class="fas fa-times-circle fa-3x text-secondary mb-2"></i>
                        <h5 class="text-secondary">Inactive</h5>
                        <p class="text-muted">This alarm is no longer active</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Additional Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="border-left-primary p-3">
                                <h6 class="text-primary">Timing Information</h6>
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td><strong>Alarm Time:</strong></td>
                                        <td>@Model.AlarmTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Received:</strong></td>
                                        <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    @if (Model.UpdatedAt.HasValue)
                                    {
                                        <tr>
                                            <td><strong>Last Updated:</strong></td>
                                            <td>@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        </tr>
                                    }
                                    @if (Model.AcknowledgedAt.HasValue)
                                    {
                                        <tr>
                                            <td><strong>Acknowledged:</strong></td>
                                            <td>@Model.AcknowledgedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="border-left-success p-3">
                                <h6 class="text-success">Classification</h6>
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td><strong>Type:</strong></td>
                                        <td><span class="badge badge-secondary">@Model.TypeDisplay</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Severity:</strong></td>
                                        <td><span class="badge @Model.SeverityBadgeClass">@Model.SeverityDisplay</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Zone:</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(Model.Zone))
                                            {
                                                <span class="badge badge-light">@Model.Zone</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Active:</strong></td>
                                        <td>
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge badge-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">No</span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="border-left-info p-3">
                                <h6 class="text-info">Measurement</h6>
                                <table class="table table-sm table-borderless">
                                    @if (Model.NumericValue.HasValue)
                                    {
                                        <tr>
                                            <td><strong>Value:</strong></td>
                                            <td><span class="h5 text-primary">@Model.NumericValue.Value.ToString("F2")</span></td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(Model.Unit))
                                        {
                                            <tr>
                                                <td><strong>Unit:</strong></td>
                                                <td><span class="badge badge-info">@Model.Unit</span></td>
                                            </tr>
                                        }
                                        <tr>
                                            <td><strong>Formatted:</strong></td>
                                            <td><strong>@Model.FormattedValue</strong></td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2" class="text-muted">No measurement data available</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Alarms
                    </a>
                    <a asp-controller="Clients" asp-action="Details" asp-route-id="@Model.ClientId" class="btn btn-info">
                        <i class="fas fa-desktop"></i> View Client
                    </a>
                </div>
                <div>
                    @if (!Model.IsAcknowledged && Model.IsActive)
                    {
                        <form asp-action="Acknowledge" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-success" onclick="return confirm('Acknowledge this alarm?')">
                                <i class="fas fa-check"></i> Acknowledge Alarm
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .badge-lg {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }

        .badge-info {
            background-color: #36b9cc;
        }

        .badge-warning {
            background-color: #f6c23e;
        }

        .badge-danger {
            background-color: #e74a3b;
        }

        .badge-dark {
            background-color: #5a5c69;
        }
    </style>
}